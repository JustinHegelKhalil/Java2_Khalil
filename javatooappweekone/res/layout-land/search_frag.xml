<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:baselineAligned="false"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
    	android:baselineAligned="false"
    	android:layout_height="match_parent"
    	android:orientation="vertical" >
    
   		<fragment android:name="com.example.javatooappweekone.SearchFraggle"
        	android:id="@+id/search_frag_id"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" />
    
    	<fragment android:name="com.example.javatooappweekone.ListFraggle"
        	android:id="@+id/list_frag_id"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" />
    	
    </LinearLayout>
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
    	android:baselineAligned="false"
    	android:layout_height="match_parent"
    	android:orientation="vertical" >
        
    <fragment android:name="com.example.javatooappweekone.DetailFraggle"
        android:id="@+id/detail_frag_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        
    </LinearLayout>
    
</LinearLayout>